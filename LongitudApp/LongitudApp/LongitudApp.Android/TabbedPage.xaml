<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LongitudApp.KmToMPage">
            <ContentPage.BindingContext
             <local:KmToMViewModel />
            </ContentPage.BindingContext>

    <ContentPage.Content>
            
            <StackLayout>
                <Label Text="Ingrese el valor en kilómetros:" />
                <Entry x:Name="valorKm" Text="{Binding ValorKm}" />
                <Button Text="Convertir" Command="{Binding ConvertirKmCommand}" />
                <Label Text="{Binding Resultado}" />
                
            </StackLayout>
        </ContentPage.Content>
</ContentPage>
    
